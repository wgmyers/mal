;; loop.mal
;; Can we make a simple loop?

;; loop
(def! loop (fn* [line]
  (if line
    (do
      (if (not (= "" line))
        (try*
          (println (line))
          (catch* exc
            (println "Drat:" exc))))
      (loop (readline "loop-user> "))))))

;; loop2
(def! loop2 (fn* [num]
  (if (not (= 0 num))
    (do
      (println num)
      (loop2 (- num 1))))))

;; main
(loop2 10)
